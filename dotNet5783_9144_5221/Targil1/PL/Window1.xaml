<Window x:Class="PL.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBox Name="Id" HorizontalAlignment="Left" Margin="321,100,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="ProductName" HorizontalAlignment="Left" Margin="321,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="ProductName_TextChanged"/>
        <TextBox Name="Price" HorizontalAlignment="Left" Margin="321,173,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="InStock" HorizontalAlignment="Left" Margin="321,248,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="321,288,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click"/>
        <Label Content="enter the product id" HorizontalAlignment="Left" Margin="319,79,0,0" VerticalAlignment="Top"/>
        <Label Content="enter the product name" HorizontalAlignment="Left" Margin="317,118,0,0" VerticalAlignment="Top" Width="138"/>
        <Label Content="enter the product price" HorizontalAlignment="Left" Margin="317,154,0,0" VerticalAlignment="Top" Width="158"/>
        <Label Content="choose the product category" HorizontalAlignment="Left" Margin="317,189,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="enter the number in stock" HorizontalAlignment="Left" Margin="317,228,0,0" VerticalAlignment="Top" Width="158"/>
        <ComboBox Name="CategorySelector" HorizontalAlignment="Left" Margin="321,208,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Content="back to home" HorizontalAlignment="Left" Margin="236,357,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="update" HorizontalAlignment="Left" Margin="396,288,0,0" VerticalAlignment="Top" Width="46" Click="Button_Click_2"/>

    </Grid>
</Window>
